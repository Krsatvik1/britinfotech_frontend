<%- include('partials/header.ejs', {dataSEO , dataSEOKeywords , strapi_base, base_url}) %>
    <%- include('partials/nav.ejs') %>
        <header class="text-center mx-6 md:mx-24 pt-2 md:pt-[2.25rem]">
            <h1 class="md:text-header md:mt-7 md:font-normal font-medium text-[1.375rem]">
                <%= data1.data.attributes.Heading %>
            </h1>
        </header>
        <section
            class="mx-6 md:mx-24 pt-10 md:pt-[7rem] md:mb-[6rem] grid md:grid-cols-3 grid-cols-2 md:gap-[1.31rem] gap-[0.4rem]">
            <% dataServices.data.attributes.services.data.forEach(element=> { %>
                <a href="/services/<%= element.attributes.slug %>"
                    class="bg-[linear-gradient(241deg,rgba(3,25,55,0.10)12.58%,rgba(1,122,118,0.10)41.73%,rgba(0,229,188,0.10)74.14%)] relative group overflow-hidden flex flex-col justify-between">
                    <div
                        class="relative z-20 group-hover:text-white transition-all duration-500 ease-in-out p-[0.7rem] md:p-[2.3rem]">
                        <div class="flex justify-between">
                            <h2 class="text-[1rem] font-medium md:font-normal md:text-[2rem] max-w-[50%] leading-tight">
                                <%= element.attributes.Brief_Heading %>
                            </h2>
                            <div>
                                <svg xmlns="http://www.w3.org/2000/svg" class="block h-5 md:h-9" viewBox="0 0 33 36"
                                    fill="none" class="group-hover:text-white">
                                    <path
                                        d="M18.0292 1.65625L31.7686 17.8937L18.0292 34.1311M29.8603 17.8937L1.99991 17.8937"
                                        class="stroke-black group-hover:stroke-white transition-all duration-500 ease-in-out"
                                        stroke-width="2.19882" stroke-linecap="round" stroke-linejoin="round" />
                                </svg>
                            </div>
                        </div>
                        <p class="text-xs mt-3 md:text-[1.25rem] leading-snug md:mt-8">
                            <%= element.attributes.Service_Brief %>
                        </p>
                    </div>
                    <div class="relative h-[6.96469rem] md:h-[15.9375rem]">
                        <div
                            class="w-full group-hover:blur-2xl group-hover:h-[400%] md:group-hover:h-[300%] bottom-0 absolute overflow-hidden h-[6.96469rem] md:h-[15.9375rem] left-0 transition-all duration-500 ease-in-out">
                            <img src="<%= strapi_base %><%= element.attributes.Service_Brief_Image.data.attributes.url %>" class="object-cover h-full w-full" alt="<%= element.attributes.Service_Brief_Image.data.attributes.alternativeText %>">
                        </div>
                    </div>
                    <div
                        class="absolute h-full w-full top-0 right-0 bottom-0 left-0 z-10 overflow-hidden transition-all duration-500 ease-in-out bg-black opacity-0 group-hover:opacity-50">
                    </div>
                </a>
            <% }) %>
        </section>
        <section class="mx-6 md:mx-24 pt-10 md:pt-[7rem] md:mb-[6rem] grid md:grid-cols-2 items-stretch">
            <div class="md:pr-[4.25rem] h-full relative">
                <div class="sticky left-0 right-0 top-0">
                    <h2 class="text-[1.125rem] font-medium md:font-normal md:text-[3.4375rem] ">
                        <%= data1.data.attributes.We_Provide_Heading %>
                    </h2>
                    <p class="md:block hidden md:text-[1.25rem] font-medium leading-snug md:mt-[1.81rem]">
                        <%= data1.data.attributes.We_Provide_Para %>
                    </p>
                </div>
            </div>
            <div class="md:p-[4.25rem] relative">
                <div
                    class="absolute left-0 top-0 bottom-0 md:w-[0.125rem] bg-[linear-gradient(0deg,#00E5BC_5.19%,#0B669D_99.58%)]">
                </div>
                <div class="h-full absolute z-10 right-0 top-0 left-0">
                    <div
                        class="sticky h-screen top-0 bg-[linear-gradient(0deg,rgba(255,255,255,1)0%,rgba(255,255,255,0)80%)]">

                    </div>

                </div>
                <div class="flex pb-[20vh] gap-10 md:px-0 px-[0.79rem] md:gap-20 flex-col mt-6 md:mt-0">
                    <% data1.data.attributes.Extra_Services.forEach(element=> { %>
                        <div>
                            <h3 class="text-sm md:text-[1.5rem] font-medium leading-snug">
                                <%= element.Heading %>
                            </h3>
                            <% element.Paragraph.forEach(element => { %>
                            <p class="mt-2 md:text-base text-xs leading-snug md:mt-4">
                                <%= element.children[0].text %>
                            </p>
                            <% }) %>
                        </div>
                        <% }) %>
                </div>
            </div>
        </section>
        <%- include('partials/employee.ejs', {dataEmployees , strapi_base, data1}) %>
            <%- include('partials/form.ejs', {data1, strapi_base , heading:true, formData:false}) %>
            <%- include('partials/footer' , {flash,dataLegal,dataSocial, showContactModal}) %>