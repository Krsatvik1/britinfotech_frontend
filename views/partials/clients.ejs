<section class="px-6 md:px-24 mt-7 md:mt-20 overflow-x-hidden">
    <div>
        <h2 class="text-base md:text-[2.5rem] text-center w-full leading-tight md:font-normal font-medium ">
            <%= dataCompanies.data.attributes.Trust_Heading %>
        </h2>
        <div class="grid grid-cols-2 md:flex mt-7 md:mt-10 md:flex-nowrap flex-wrap md:w-max overflow-visible items-stretch md:gap-6 gap-4 client-list">
            <% dataCompanies.data.attributes.companies.data.forEach(company => { %>
                <div class=" h-[4.6875rem] relative md:h-[8rem] md:w-[17rem] flex items-center px-10 justify-center">
                    <img src="<%= strapi_base  %><%= company.attributes.Company_Logo.data.attributes.url %>" alt="<%= company.attributes.Company_Name %>" class=" block max-w-full max-h-full object-contain grayscale hover:grayscale-0 transition-all duration-500 ease-in-out">
                </div>
            <% }) %>
        </div>
    </div>
</section>